{
  "swagger": "2.0",
  "info": {
    "title": "Book API",
    "description": "This is an API for Creating, Updating and Deleting Books Details in a Database",
    "version": "1.0.0"
  },
  "host": "localhost:8085",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "This is the Index Page",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api-docs": {
      "get": {
        "description": "",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/books/": {
      "get": {
        "description": "Get All Books Details from the Datebase",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Create a New Book Details in the Database",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "bookISBN": {
                  "example": "9781484295137"
                },
                "bookTitle": {
                  "example": "Introduction to Software Testing"
                },
                "bookDescription": {
                  "example": "This simple and practical guide teaches you the fundamentals of software testing, with no prior experience required."
                },
                "authorName": {
                  "example": "Panagiotis Leloudas"
                },
                "releaseDate": {
                  "example": "2023"
                },
                "publisher": {
                  "example": "Apress"
                },
                "price": {
                  "example": "$34.79"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "description": "Get a Book Details from the Data based on ID",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "put": {
        "description": "Update a Book Details in the Database based on Id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "bookISBN": {
                  "example": "9781484295137"
                },
                "bookTitle": {
                  "example": "Introduction to Software Testing"
                },
                "bookDescription": {
                  "example": "This simple and practical guide teaches you the fundamentals of software testing, with no prior experience required."
                },
                "authorName": {
                  "example": "Panagiotis Leloudas"
                },
                "releaseDate": {
                  "example": "2023"
                },
                "publisher": {
                  "example": "Apress"
                },
                "price": {
                  "example": "$34.79"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "description": "Delete a Book Details in the Database based on ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}